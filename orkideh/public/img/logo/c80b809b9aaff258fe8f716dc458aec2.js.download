document.addEventListener("DOMContentLoaded",function(){const slidesContainer=document.getElementById("slides");const paginationContainer=document.getElementById("pagination");let currentIndex=0;let isDragging=!1;let startX=0;let endX=0;let dragThreshold=5;function updateSlides(){slidesContainer.innerHTML='';paginationContainer.innerHTML='';const slides=window.innerWidth<768?slidesData.mobile:slidesData.desktop;slides.forEach((slide,index)=>{const slideDiv=document.createElement("div");slideDiv.className="slide";const img=document.createElement("img");img.src=slide.src;img.draggable=!1;slideDiv.appendChild(img);slidesContainer.appendChild(slideDiv);slideDiv.addEventListener("click",(e)=>{if(!isDragging&&slide.link){window.location.href=slide.link}});const dot=document.createElement("div");dot.className="pagination-dot";if(index===currentIndex)dot.classList.add("active");dot.addEventListener("click",()=>{currentIndex=index;updateSlides();updateTransform()});paginationContainer.appendChild(dot)});updateTransform()}
function updateTransform(){const slides=slidesContainer.children;if(currentIndex>=slides.length){currentIndex=0}else if(currentIndex<0){currentIndex=slides.length-1}
slidesContainer.style.transform=`translateX(-${currentIndex * 100}%)`;updatePagination()}
function updatePagination(){const dots=paginationContainer.children;for(let i=0;i<dots.length;i++){if(i===currentIndex){dots[i].classList.add("active")}else{dots[i].classList.remove("active")}}}
document.getElementById("nextBtn").addEventListener("click",()=>{currentIndex++;updateTransform()});document.getElementById("prevBtn").addEventListener("click",()=>{currentIndex--;updateTransform()});function handleSwipeStart(e){isDragging=!1;startX=e.type==='touchstart'?e.touches[0].clientX:e.clientX;slidesContainer.style.transition='none'}
function handleSwipeMove(e){if(startX===0)return;endX=e.type==='touchmove'?e.touches[0].clientX:e.clientX;const deltaX=endX-startX;if(Math.abs(deltaX)>dragThreshold){isDragging=!0;slidesContainer.style.transform=`translateX(calc(-${currentIndex * 100}% + ${deltaX}px))`}}
function handleSwipeEnd(){slidesContainer.style.transition='transform 0.5s ease-in-out';const deltaX=endX-startX;if(isDragging){if(deltaX>50){currentIndex--}else if(deltaX<-50){currentIndex++}
updateTransform()}
startX=0;endX=0}
slidesContainer.addEventListener("touchstart",handleSwipeStart);slidesContainer.addEventListener("touchmove",handleSwipeMove);slidesContainer.addEventListener("touchend",handleSwipeEnd);slidesContainer.addEventListener("mousedown",handleSwipeStart);slidesContainer.addEventListener("mousemove",handleSwipeMove);slidesContainer.addEventListener("mouseup",handleSwipeEnd);slidesContainer.addEventListener("mouseleave",handleSwipeEnd);window.addEventListener("resize",updateSlides);updateSlides()})
